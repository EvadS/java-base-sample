<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">


    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd MM yyyy HH:mm:ss,SSS} %p %t %c - %m%n"/>
        </layout>
    </appender>


    <!--- Document UA-->
    <appender name="uaDocumentService" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="/var/log/tomcat7/UaDocumentService.log"/>
        <param name="MaxFileSize" value="1000KB"/>
        <param name="MaxBackupIndex" value="5"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd MM yyyy HH:mm:ss,SSS} %p %t - %m%n"/>
        </layout>
    </appender>

    <logger name="org.example.App" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="uaDocumentService"/>
    </logger>

    <root>
        <level value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</log4j:configuration>
